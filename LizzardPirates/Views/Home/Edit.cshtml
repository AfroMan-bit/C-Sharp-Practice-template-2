@model LizzardPirate

<h2>Edit @Model.Name</h2>

<form asp-action="Update" asp-route-LPId="@Model.LizzardPirateId" method="post" class="col-5 mx-auto">

    <div class="form-group">
        <span asp-validation-for="Name"></span><br>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="LizzardType"></span><br>
        <label asp-for="LizzardType"></label>
        <input asp-for="LizzardType" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="PirateRole"></span><br>
        <label asp-for="PirateRole"></label>
        <input asp-for="PirateRole" class="form-control">
    </div>
    <input type="submit" value="Edit @Model.Name" class="btn btn-warning" >
</form>